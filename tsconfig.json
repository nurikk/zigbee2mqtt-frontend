{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2019",
        "moduleResolution": "node",
        "module": "esnext",
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
    },
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["dom", "esnext"],
    "exclude": ["dist"]
}
